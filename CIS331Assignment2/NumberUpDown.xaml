<UserControl x:Class="NumberUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIS331Assignment2"
             mc:Ignorable="d" >
    <Border x:Name="borderMaster"  BorderBrush="Gray" BorderThickness=".5">
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Width="20">
                <Button x:Name="buttonAdd1" Width="20">
                    <TextBlock Text="▲" FontSize="5"/>
                </Button>
                <Button x:Name="buttonSubtract1" Width="20">
                    <TextBlock Text="▼" FontSize="5"/>
                </Button>
            </StackPanel>
            <TextBox x:Name="textBoxNumber" Height="20" BorderBrush="Transparent" BorderThickness="0" VerticalContentAlignment="Center"/>
        </DockPanel>
    </Border>
</UserControl>
